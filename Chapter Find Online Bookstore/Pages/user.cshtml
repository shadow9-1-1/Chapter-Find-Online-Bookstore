<style>
    .profile-header {
        position: relative;
        background: url('img/background profile.jpg') center/cover no-repeat; height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.8);
    }

    .profile-picture {
        position: absolute;
        bottom: -50px;
        width: 120px;
        height: 120px;
        border: 5px solid white;
        border-radius: 50%;
        background: white;
        overflow: hidden;
    }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .profile-info {
        margin-top: 80px;
        text-align: center;
    }

        .profile-info h1 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .profile-info p {
            color: #777;
            font-size: 1rem;
        }

    .service-cards {
        margin-top: 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
    }

    .service-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .service-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

    .service-card-body {
        padding: 15px;
    }

    .service-card-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .service-card-text {
        color: #555;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .service-card button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .service-card button:hover {
            background-color: #0056b3;
        }
</style>

<div class="profile-header">
    <div class="profile-picture">
        <img src="~/img/User IMG.jpg" alt="Profile Picture">
    </div>
</div>

<div class="profile-info">
    <h1>@Model.appUser?.FirstName @Model.appUser?.LastName</h1>
    <p>Member since: @Model.appUser?.CreatedAt.ToString("D")</p>
    <p>Welcome to your profile. Select a service below to proceed.</p>
</div>

<div class="container mt-4">
    <div class="service-cards">
        <div class="service-card">
            <img src="/img/delivary order.png" alt="Orders">
            <div class="service-card-body">
                <h3 class="service-card-title">Orders</h3>
                <p class="service-card-text">Show All Your Order, Order details, Order Stat. </p>
                <button onclick="window.location.href='/service1'">Go to Orders</button>
            </div>
        </div>

        <div class="service-card">
            <img src="~/img/address logo.jpg" alt="Address">
            <div class="service-card-body">
                <h3 class="service-card-title">Address</h3>
                <p class="service-card-text">Manage all of Your Address By add or modify</p>
                <button onclick="window.location.href='/service2'">Go to Address</button>
            </div>
        </div>

        <div class="service-card">
            <img src="~/img/account settings.jpg" alt="Setting">
            <div class="service-card-body">
                <h3 class="service-card-title">Account Setting</h3>
                <p class="service-card-text">Manage Your Account like change Email or password and more</p>
                <button onclick="window.location.href='/service3'">Go to Setting</button>
            </div>
        </div>

        <div class="service-card">
            <img src="/img/Books.png" alt="Books">
            <div class="service-card-body">
                <h3 class="service-card-title">Books</h3>
                <p class="service-card-text">Take a look on our Books</p>
                <button onclick="window.location.href='/service4'">Go to Books</button>
            </div>
        </div>
    </div>
</div>
