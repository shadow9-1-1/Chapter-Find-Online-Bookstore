@page
@model Chapter_Find_Online_Bookstore.Pages.AddCategoriesModel
@{
    ViewData["Title"] = "Add Category";
    Layout = "_Layout1";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Add New Category
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="Admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Add Category</li>
    </ol>
</section>
<br />
<div class="box box-warning">
    <div class="box-body">
        <form method="post" enctype="multipart/form-data" role="form" id="categoryForm">
            <!-- Category Name -->
            <div class="form-group">
                <label for="categoryName">Category Name</label>
                <input type="text" id="categoryName" class="form-control" placeholder="Enter category name" asp-for="@Model.name" required />
            </div>

            <!-- Category Image Upload -->
            <div class="form-group">
                <label for="img">Upload Category Image</label>
                <input type="file" id="img" class="form-control" asp-for="ImageFile" required />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Category</button>
            </div>
        </form>
    </div><!-- /.box-body -->
</div><!-- /.box -->
