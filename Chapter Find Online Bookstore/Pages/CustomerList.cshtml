@page
@model Chapter_Find_Online_Bookstore.Pages.CustomerListModel
@{
    ViewData["Title"] = " Customers";
    Layout = "_Layout1";
}

<section class="content-header">
    <h1>
        Customers List
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="Admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"> Customers</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All Customers With Details</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>CustomerID</th>
                                <th>Customer Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>PhoneNumber</th>
                                <th>Total Orders</th>
                                <th>Address Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Table.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Table.Rows[i][0]</td>
                                    <td>@Model.Table.Rows[i][1]</td>
                                    <td>@Model.Table.Rows[i][2]</td>
                                    <td>@Model.Table.Rows[i][3]</td>
                                    <td>@Model.Table.Rows[i][4]</td>
                                    <td>@Model.Table.Rows[i][5]</td>
                                    <td>@Model.Table.Rows[i][6]</td>


                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>CustomerID</th>
                                <th>Customer Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>PhoneNumber</th>
                                <th>Total Orders</th>
                                <th>Address Count</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
<!-- page script -->
<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false
        });
    });
</script>
